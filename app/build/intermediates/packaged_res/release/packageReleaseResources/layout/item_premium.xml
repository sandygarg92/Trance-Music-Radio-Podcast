<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginEnd="@dimen/small_margin"
        app:cardBackgroundColor="@color/light_card_background"
        app:cardCornerRadius="@dimen/corner_radius"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/layout_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/light_list_bg_color"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_member"
                android:layout_width="@dimen/size_img_large"
                android:layout_height="@dimen/size_img_large"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dialog_margin"
                android:src="@drawable/ic_medal_1month_60dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dialog_margin"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_toStartOf="@+id/layout_buy"
                android:layout_toEndOf="@+id/img_member"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_member"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ft_app_medium"
                    android:singleLine="false"
                    android:text="@string/app_name"
                    android:textColor="@color/light_text_main_color"
                    android:textSize="@dimen/text_size_subhead"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_info1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/ft_app_bold"
                    android:singleLine="false"
                    android:text="@string/format_buy_pro1"
                    android:textColor="@color/light_text_second_color"
                    android:textSize="@dimen/text_margin" />

                <TextView
                    android:id="@+id/tv_info2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/ft_app_bold"
                    android:maxLines="3"
                    android:singleLine="false"
                    android:text="@string/info_cancel_anytime"
                    android:textColor="@color/light_text_second_color"
                    android:textSize="@dimen/text_margin" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dialog_margin"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/audiowide"
                    android:singleLine="true"
                    android:text="1.99$"
                    android:textColor="@color/color_price"
                    android:textSize="@dimen/text_margin"
                    android:textStyle="bold" />

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tiny_margin"
                    app:mrl_rippleAlpha="0.2"
                    app:mrl_rippleColor="@color/white"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true"
                    app:mrl_rippleRoundedCorners="23dp">

                    <RelativeLayout
                        android:id="@+id/btn_buy"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_buy"
                        android:paddingStart="25dp"
                        android:paddingEnd="25dp">

                        <TextView
                            android:id="@+id/tv_buy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/ft_app_medium"
                            android:text="@string/title_buy_now"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_margin"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/ic_buy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/icon_check"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_img_small"
                            android:visibility="gone" />
                    </RelativeLayout>

                </com.balysv.materialripple.MaterialRippleLayout>
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>