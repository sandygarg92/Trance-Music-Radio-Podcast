<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height_big"
        android:background="@color/light_list_bg_color">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/img_sort"
            android:layout_width="@dimen/size_img_medium"
            android:layout_height="@dimen/size_img_medium"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="0dp"
            android:text="@string/icon_drag"
            android:textColor="@color/light_list_color_secondary_text"
            android:textSize="@dimen/size_img_small"
            android:visibility="gone"
            app:fontFamily="@font/ft_material_icon" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dialog_margin"
            android:layout_toEndOf="@+id/img_sort">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_radio"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dialog_margin"
                android:layout_marginBottom="@dimen/dialog_margin"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_live_radio_default" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dialog_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_toStartOf="@+id/layout_button"
            android:layout_toEndOf="@+id/layout_img"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@color/light_list_color_main_text"
                android:textSize="@dimen/text_size_subhead"
                app:fontFamily="@font/montserrat_medium" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/info_copyright"
                android:textColor="@color/light_list_color_secondary_text"
                android:textSize="@dimen/text_size_body" />

            <LinearLayout
                android:id="@+id/layout_view_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/icon_view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:padding="0dp"
                    android:singleLine="true"
                    android:text="@string/icon_eye"
                    android:textColor="@color/light_color_accent"
                    android:textSize="@dimen/size_img_tiny"
                    app:fontFamily="@font/ft_material_icon" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_number_view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:text="112"
                    android:textColor="@color/light_color_accent"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_upload"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_cloud_upload_36dp"
                app:tint="@color/light_list_color_secondary_text" />

            <com.like.LikeButton
                android:id="@+id/btn_favourite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:anim_scale_factor="2"
                app:icon_size="@dimen/size_img_small"
                app:like_drawable="@drawable/ic_heart_pink_36dp"
                app:liked="false"
                app:unlike_drawable="@drawable/ic_heart_outline_black_36dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/img_menu"
                android:layout_width="@dimen/size_img_medium"
                android:layout_height="@dimen/size_img_medium"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/small_margin"
                android:gravity="center"
                android:padding="0dp"
                android:text="@string/icon_menu"
                android:textColor="@color/light_list_color_secondary_text"
                android:textSize="@dimen/size_img_menu"
                android:visibility="gone"
                app:fontFamily="@font/ft_material_icon" />

        </LinearLayout>

        <View
            android:id="@+id/list_divider"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:background="@color/light_list_color_divider" />

    </RelativeLayout>


</RelativeLayout>