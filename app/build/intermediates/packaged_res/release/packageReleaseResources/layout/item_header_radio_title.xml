<?xml version="1.0" encoding="utf-8"?>

                                                        

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:tag="layout/item_header_radio_title_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:id="@+id/layout_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dialog_margin"
            android:paddingTop="@dimen/top_section_margin"
            android:paddingEnd="@dimen/dialog_margin"
            android:paddingBottom="@dimen/top_section_margin">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/layout_ripple_more"
                android:singleLine="true"
                android:textColor="@color/light_text_main_color"
                android:textSize="@dimen/text_size_subhead"
                app:fontFamily="@font/ft_app_medium" />

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/layout_ripple_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/ripple_effect_color"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_see_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/title_see_more"
                    android:textColor="@color/light_see_more_color"
                    android:textSize="@dimen/text_size_body"
                    app:fontFamily="@font/ft_app_medium" />

            </com.balysv.materialripple.MaterialRippleLayout>

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="2:0.6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


         