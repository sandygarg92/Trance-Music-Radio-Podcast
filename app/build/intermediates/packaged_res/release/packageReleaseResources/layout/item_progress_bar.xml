<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/layout_root_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_top_dialog"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:background="@color/light_color_background"
        android:paddingTop="@dimen/padding_top_dialog" >

        <com.onlineradiofm.trancemusicradio.ypylibs.view.CircularProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="@dimen/height_process_bar"
            android:layout_height="@dimen/height_process_bar"
            android:layout_centerVertical="true"
            app:cpb_color="@color/light_progressbar_color"
            app:cpb_stroke_width="@dimen/stroke_process" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:textColor="@color/light_text_main_color"
            android:layout_toEndOf="@+id/progressBar1"
            android:text="@string/info_loading"
            android:textSize="@dimen/text_size_subhead" />
    </RelativeLayout>

</RelativeLayout>