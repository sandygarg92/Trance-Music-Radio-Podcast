<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/my_toolbar"
                layout="@layout/item_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/layout_bg_premium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/my_toolbar"
                android:background="@color/light_pager_color_background">

                <com.onlineradiofm.trancemusicradio.ypylibs.view.YPYRecyclerView
                    android:id="@+id/recycler_view_iap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/layout_ripple_btn_manage"
                    android:scrollbars="none" />

                <com.onlineradiofm.trancemusicradio.ypylibs.view.CircularProgressBar
                    android:id="@+id/progressBar_pre"
                    android:layout_width="@dimen/height_process_bar"
                    android:layout_height="@dimen/height_process_bar"
                    android:layout_centerInParent="true"
                    app:cpb_color="@color/light_progressbar_color"
                    app:cpb_stroke_width="@dimen/stroke_process" />

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/layout_ripple_btn_manage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/layout_bottom"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    app:mrl_rippleAlpha="0.2"
                    app:mrl_rippleColor="@color/ripple_effect_color"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btn_manage_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="@dimen/dialog_margin"
                        android:singleLine="true"
                        android:text="@string/title_manage_subscription"
                        android:textColor="@color/light_color_accent"
                        android:textSize="@dimen/text_size_subhead"
                        android:textStyle="bold" />
                </com.balysv.materialripple.MaterialRippleLayout>

                <RelativeLayout
                    android:id="@+id/layout_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_img_medium"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/divider"
                        app:mrl_rippleAlpha="0.2"
                        app:mrl_rippleColor="@color/ripple_effect_color"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleOverlay="true">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_policy"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingStart="@dimen/dialog_margin"
                            android:paddingEnd="@dimen/dialog_margin"
                            android:singleLine="true"
                            android:text="@string/title_privacy_policy"
                            android:textColor="@color/light_text_second_color"
                            android:textSize="@dimen/text_size_subhead"
                            android:textStyle="bold" />
                    </com.balysv.materialripple.MaterialRippleLayout>


                    <View
                        android:id="@+id/divider"
                        android:layout_width="@dimen/divider"
                        android:layout_height="@dimen/size_img_tiny"
                        android:layout_centerInParent="true"
                        android:background="@color/light_text_second_color" />

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/divider"
                        app:mrl_rippleAlpha="0.2"
                        app:mrl_rippleColor="@color/ripple_effect_color"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleOverlay="true">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_tos"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingStart="@dimen/dialog_margin"
                            android:paddingEnd="@dimen/dialog_margin"
                            android:singleLine="true"
                            android:text="@string/title_term_of_use"
                            android:textColor="@color/light_text_second_color"
                            android:textSize="@dimen/text_size_subhead"
                            android:textStyle="bold" />
                    </com.balysv.materialripple.MaterialRippleLayout>
                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>