<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_root_loading_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dialog_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:background="@color/light_load_more_bg_color"
        android:paddingTop="@dimen/dialog_margin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <com.onlineradiofm.trancemusicradio.ypylibs.view.CircularProgressBar
                android:id="@+id/progressBar_loading_more"
                android:layout_width="@dimen/height_process_bar"
                android:layout_height="@dimen/height_process_bar"
                android:layout_gravity="center_vertical"
                app:cpb_color="@color/light_progressbar_color"
                app:cpb_stroke_width="@dimen/stroke_process"/>

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_toEndOf="@+id/progressBar1"
                android:text="@string/info_loading_more"
                android:textColor="@color/light_text_main_color"
                android:textSize="@dimen/text_size_subhead"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>