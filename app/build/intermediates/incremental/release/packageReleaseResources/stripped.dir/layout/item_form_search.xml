<?xml version="1.0" encoding="utf-8"?>

                                                        

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:tag="layout/item_form_search_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/top_section_margin"
            android:paddingBottom="@dimen/top_section_margin"
            android:layout_marginStart="@dimen/dialog_margin"
            android:layout_marginEnd="@dimen/dialog_margin"
            android:text="@string/title_search"
            android:textColor="@color/light_text_main_color"
            android:textSize="0sp"
            app:fontFamily="@font/ft_app_medium" />

        <RelativeLayout
            android:id="@+id/layout_ed_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_edit_text"
            android:layout_marginStart="@dimen/dialog_margin"
            android:layout_marginEnd="@dimen/dialog_margin"
            android:background="@drawable/bg_light_edit_search">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size_img_medium"
                android:layout_marginEnd="@dimen/size_img_medium"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="@string/info_hint_search_home"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textColor="@color/light_text_main_color"
                android:textColorHint="@color/light_text_second_color"
                android:textSize="@dimen/text_size_subhead" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_search"
                android:layout_width="@dimen/size_img_small"
                android:layout_height="@dimen/size_img_small"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/small_margin"
                app:srcCompat="@drawable/ic_search_white_24dp"
                app:tint="@color/light_text_second_color" />
        </RelativeLayout>


    </LinearLayout>
         