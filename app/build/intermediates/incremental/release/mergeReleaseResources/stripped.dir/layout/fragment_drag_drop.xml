<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_drag_drop_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_color_primary_dark"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/layout_bg"
        layout="@layout/item_play_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/layout_action_bar_player"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_img_big"
        android:layout_gravity="top"
        android:paddingEnd="@dimen/dialog_margin"
        android:paddingStart="@dimen/dialog_margin">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/layout_ripple_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mrl_rippleAlpha="0.2"
            android:layout_centerVertical="true"
            app:mrl_rippleColor="@color/white"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_close"
                android:layout_width="@dimen/size_img_medium"
                android:layout_height="@dimen/size_img_medium"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_arrow_down_white_36dp"
                app:tint="@color/white" />
        </com.balysv.materialripple.MaterialRippleLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/station_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/layout_ripple_menu"
            android:layout_toEndOf="@+id/layout_ripple_close"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@string/title_now_playing"
            android:textColor="@color/dark_play_color_text"
            android:textSize="@dimen/text_size_title"
            app:fontFamily="@font/montserrat_medium" />


        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/layout_ripple_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mrl_rippleAlpha="0.2"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:mrl_rippleColor="@color/white"
            android:layout_gravity="center_vertical"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnMenu"
                android:layout_width="@dimen/size_img_medium"
                android:layout_height="@dimen/size_img_medium"
                android:fontFamily="@font/material_icon"
                android:gravity="center"
                android:padding="0dp"
                android:singleLine="true"
                android:text="@string/icon_menu"
                android:textColor="@color/white"
                android:textSize="@dimen/size_img_menu" />
        </com.balysv.materialripple.MaterialRippleLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_above="@+id/layout_total_info"
        android:layout_below="@+id/layout_action_bar_player">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_sleep_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="00:11:11"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_headline"
            android:visibility="invisible"
            app:fontFamily="@font/ft_app_medium" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_info_record"
            android:layout_below="@+id/tv_sleep_timer"
            android:layout_marginTop="@dimen/dialog_margin"
            android:layout_marginBottom="@dimen/dialog_margin">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_play_song"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/size_img_medium"
                android:layout_marginEnd="@dimen/size_img_medium"
                android:background="@drawable/shadow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_light_play_default" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_info_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="@string/format_recording_files"
            android:textColor="@color/light_play_color_text"
            android:textSize="@dimen/text_size_subhead"
            app:fontFamily="@font/ft_app_medium"
            android:visibility="invisible"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_total_info"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_above="@+id/layout_total_control"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/layout_info_play"
            android:layout_width="match_parent"
            layout="@layout/item_play_info"
            android:layout_marginBottom="@dimen/size_img_small"
            android:layout_height="wrap_content"/>

        <include
            android:id="@+id/layout_seekbar_podcast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            layout="@layout/item_seekbar_podcast" />

        <include
            android:id="@+id/layout_seekbar_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/item_seekbar_volume" />
    </LinearLayout>

    <include
        android:id="@+id/layout_total_control"
        layout="@layout/item_play_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
