<?xml version="1.0" encoding="utf-8"?>
        

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/dialog_sleep_time_0">

        <RelativeLayout
            android:layout_width="@dimen/size_sleep_timer"
            android:layout_height="@dimen/size_sleep_timer"
            android:layout_centerInParent="true">

            <com.triggertrap.seekarc.SeekArc
                android:id="@+id/seek_sleep"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/size_img_medium"
                app:arcWidth="3dp"
                app:rotation_arc="180"
                app:seekarc_max="100"
                app:startAngle="30"
                app:sweepAngle="300" />

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@color/dialog_color_text"
                android:textSize="@dimen/text_size_subhead" />
        </RelativeLayout>


    </RelativeLayout>
         