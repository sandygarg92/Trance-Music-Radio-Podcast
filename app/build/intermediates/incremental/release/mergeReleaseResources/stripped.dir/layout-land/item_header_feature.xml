<?xml version="1.0" encoding="utf-8"?>

                                                        

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:tag="layout-land/item_header_feature_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_trending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dialog_margin"
            android:layout_marginEnd="@dimen/dialog_margin"
            android:paddingTop="@dimen/top_section_margin"
            android:paddingBottom="@dimen/top_section_margin"
            android:singleLine="true"
            android:text="@string/title_trending_radios"
            android:textColor="@color/light_text_main_color"
            android:textSize="@dimen/text_size_body"
            app:fontFamily="@font/ft_app_medium" />

    </LinearLayout>
         