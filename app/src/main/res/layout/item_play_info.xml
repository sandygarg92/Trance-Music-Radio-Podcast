<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/layout_ripple_sleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mrl_rippleAlpha="0.2"
            android:layout_centerVertical="true"
            app:mrl_rippleColor="@color/light_ripple_button_color"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnSleep"
                android:layout_width="@dimen/size_img_medium"
                android:layout_height="@dimen/size_img_medium"
                android:padding="@dimen/tiny_margin"
                app:tint="@color/light_play_color_text"
                app:srcCompat="@drawable/ic_sleep_mode_white_36dp" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_toStartOf="@+id/layout_ripple_equalizer"
            android:layout_toEndOf="@+id/layout_ripple_sleep"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_drag_song"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/app_name"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                app:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:textColor="@color/light_play_color_text"
                android:textSize="@dimen/text_size_subhead" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_drag_singer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/app_name"
                app:fontFamily="@font/montserrat_medium"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:gravity="center"
                android:textColor="@color/light_play_color_secondary_text"
                android:textSize="@dimen/text_size_body" />
        </LinearLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/layout_ripple_equalizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mrl_rippleAlpha="0.2"
            android:layout_centerVertical="true"
            app:mrl_rippleColor="@color/light_ripple_button_color"
            android:layout_alignParentEnd="true"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnEqualizer"
                android:layout_width="@dimen/size_img_medium"
                android:layout_height="@dimen/size_img_medium"
                android:padding="@dimen/tiny_margin"
                app:tint="@color/light_play_color_text"
                app:srcCompat="@drawable/ic_equalizer_white_36dp" />
        </com.balysv.materialripple.MaterialRippleLayout>

    </RelativeLayout>

</layout>

