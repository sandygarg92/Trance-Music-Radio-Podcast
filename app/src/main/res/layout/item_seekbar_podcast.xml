<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="@string/title_empty_duration"
            android:textColor="@color/light_play_color_secondary_text"
            android:textSize="@dimen/text_size_body" />

        <com.wicaodian.widget.IndicatorSeekBar
            android:id="@+id/seekBar_podcast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/tv_duration"
            android:layout_toEndOf="@+id/tv_current_time"
            app:isb_max="100"
            app:isb_progress="50"
            app:isb_show_indicator="none"
            app:isb_thumb_color="@color/light_color_accent"
            app:isb_track_background_color="@color/light_play_color_secondary_text"
            app:isb_track_progress_color="@color/light_color_accent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="@string/title_empty_duration"
            android:textColor="@color/light_play_color_secondary_text"
            android:textSize="@dimen/text_size_body" />

    </RelativeLayout>

</layout>

